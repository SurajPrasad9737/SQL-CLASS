<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show All Users</title>
    <style>
        html{
            background-color: #ccc;
        }
        table{
           width: 100%;
           display: flex;
           justify-content: space-around;
           align-items: center;

           
            
        }
        table,td,th{
            border: 1px solid black;
            
            
        }
        
       
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Emails</th>
            <th>Username</th>
        </tr>
        <% for(users of user){ %>
            <tr>
                <td><%=users.id%></td>
                <td><%=users.email%></td>
                <td><%=users.username%></td>
                <td>
                    <form method="get" action="/user/<%=users.id%>/edit">
                        <button>Edit username</button>
                    </form>
                </td>
                <td>
                    <form method="get" action="/user/<%=users.id%>/delete">
                        <button>Delete username</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>

